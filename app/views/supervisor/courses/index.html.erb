<% provide :title, "Supervisor | Courses" %>

<h1 class="page-header">All Courses</h1>

<% if @courses.any? %>
  <%= will_paginate @courses %>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Trainees</th>
        <th>Created at</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <%= render @courses %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">There is no courses available right now!</div>
<% end %>

<%= link_to "Start New Course", new_supervisor_course_path, class: "btn btn-primary" %>