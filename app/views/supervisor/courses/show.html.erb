<% provide :title, "Course" %>
<div class="panel panel-primary">
  <div class="panel panel-heading">
    <h3><%= @course.name.capitalize %></h3>
  </div>
  <div class="panel panel-body">
    <p><%= @course.description %></p><hr />
    <% if @course.course_subjects.any? %>
      <h4>Subjects in Course</h4>
      <ul class="list-group">
        <% @course.course_subjects.each do |course_subject| %>
          <% subject = course_subject.subject %>
          <li class="list-group-item">
            <%= link_to subject.name, supervisor_course_course_subject_path(course_subject.course, course_subject) %>
          </li>
        <% end %>
      </ul>
    <% end %><br />
    <%= render "shared/trainee_in_course", course: @course %>
  </div>
</div>