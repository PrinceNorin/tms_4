<% provide :title, "Course Subject" %>
<div class="row">
  <%=form_for [@course,@course_subject], html: { class: "form" } do |f| %>
    <%=f.fields_for :course_subject_tasks do |f2|%>
      <%course_subject_task=f2.object%>
      <div class="col-md-3 tasks " style=" background-color:<%=course_subject_task.
      status? ? "silver": "lightgreen"%>">
        <%=course_subject_task.task.name%>
        <%=f2.hidden_field :task_id%>
        <br>
        <div class="form-group">
          <%=f2.check_box :status%>
          <lebal>Finish</lebal>
        </div>
      </div>
    <%end%>
      <div class="col-md-3 col-md-offset-4" style="clear:both">
        <%= f.submit "Update", class: "btn btn-primary form-control" %>
      </div>
  <%end%>
</div>
<div class="container">
  <h3>Basic Information</h3>
  <h5>Start At:<%=@course_subject.created_at%></h5>
  <h5>End At:Unknow</h5>
  <h5>Status:<%=@course_subject.status? ? "Finish" : "Unfinish"%></h5>
</div>
<div class="container">
  <h3>Instruction <label id="show_hide" class="btn">(hide)</label></h3>
  <div id="instruction">
    <%=@course_subject.subject.instruction%>
  </div>
</div>

<script type="text/javascript">
  $("#show_hide").on("click", function(){    
    if($("#show_hide").text()=="(hide)"){      
      $("#show_hide").text("(show)");
      $("#instruction").hide();
    }else if($("#show_hide").text()=="(show)"){
      $("#show_hide").text("(hide)");
      $("#instruction").show();
    }
  });
</script>