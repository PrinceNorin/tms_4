<% provide :title, "Course" %>

<div class="panel panel-primary">
  <div class="panel panel-heading">
    <h3><%= @course.name.capitalize %></h3>
  </div>
  <div class="panel panel-body">
    <p><%= @course.description %></p><hr />
    <% if @course.course_subjects.any? %>    
      <h4>Subjects in Course</h4>
      <ul class="list-group">
        <% @course.enrollment_subjects.each do |enrollment_subject| %>
          <li class="list-group-item">
            <%= link_to enrollment_subject.subject.name, course_enrollment_subject_path(
            enrollment_subject.course,enrollment_subject)%>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>